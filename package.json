{
  "name": "node-clean-api",
  "version": "2.1.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start:server": "node dist/main/main.js",
    "build": "tsc --p tsconfig-build.json && tsc-alias -p tsconfig-build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "tsc:watch": "tsc --p tsconfig-build.json && tsc-alias -p tsconfig-build.json --watch",
    "node:watch": "node --watch dist/main/main.js",
    "start:ts": "ts-node -r tsconfig-paths/register src/main/main.ts",
    "lint:staged": "lint-staged",
    "test": "jest --passWithNoTests --runInBand",
    "test:simplified": "npm test -- --silent --noStackTrace --coverage=false",
    "test:staged": "npm test -- --findRelatedTests",
    "test:watch": "npm test -- --watch --noStackTrace --silent",
    "test:unit": "npm test -- --noStackTrace --silent -c jest-unit.config.ts",
    "test:integration": "npm test -- --noStackTrace --silent -c jest-integration.config.ts",
    "docker:build": "docker build -t guimassoqueto/node-api ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.6",
    "@faker-js/faker": "^8.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/copyfiles": "^2.4.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^20.6.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.17",
    "copyfiles": "^2.4.1",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "husky": "^8.0.3",
    "i": "^0.3.7",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "npm": "^9.7.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-glob": "^3.2.12",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.6.0",
    "swagger-ui-express": "^4.6.3",
    "validator": "^13.9.0",
    "winston": "^3.9.0"
  },
  "engines": {
    "node": "20.x"
  }
}
